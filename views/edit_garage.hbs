<main>
    <div class="wrapper">
        <div class="header">Sửa nhà xe</div>
        <form id="AddGarage" action="/admin/garage/EditGarage" method="post" enctype="multipart/form-data">
            <div class="container row">

                <div class="img col-md-4">
                    <input type="file" name="sampleFile" required><br>
                </div>

                <div class="content col-md-8">
                    <div class="fullname">
                        <h4>Tên nhà xe</h4>
                        <div class="displayField">
                            <input type="text" id="hoten" name="hoten" maxlength="32" value="" required>
                        </div>
                    </div>
                    <div class="email">
                        <h4>Email</h4>
                        <div class="displayField">
                            <input type="email" id="email" name="email" maxlength="32" value="" required>
                        </div>
                    </div>
                    <div class="phone">
                        <h4>Số điện thoại</h4>
                        <div class="displayField">
                            <input type="tel" id="sdt" name="sdt" maxlength="10" pattern="[0-9]{10}" value="" required>
                        </div>
                    </div>
                    <div class="address">
                        <h4>Địa chỉ</h4>
                        <div class="displayField">
                            <input type="text" id="address" name="address" maxlength="100" value="" required>
                        </div>
                    </div>
                    <div class="introduce">
                        <h4>Giới thiệu</h4>
                        <textarea rows="8" cols="73">

                            </textarea>
                    </div>
                    <div class="btn"><button type="submit">Lưu</button></div>
                </div>
            </div>
        </form>

    </div>


</main>