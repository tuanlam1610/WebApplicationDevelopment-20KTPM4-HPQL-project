<script>
  // Dynamic Nav Bar
  var url = window.location;
  var params = new URLSearchParams(window.location.search);
  console.log("URL: " + url.toString());
  console.log(url.toString().split('/'));
  console.log("Params: " + params.toString());
  if(url.toString().includes("listofgarage")) {
    document.getElementById('garageNav').classList.add("active");
  }
  else if(url.toString().includes("listoftrip")){
    document.getElementById('tripNav').classList.add("active");
  }
  else if(params.toString() == "" && url.toString().split('/')[3] == "") document.getElementById('homepageNav').classList.add("active");
  //Token
  if (localStorage.getItem("accessToken")) {
    document.getElementById("navbarSupportedContent").lastElementChild.remove();
    var userBtn = '<div id="userBtnGroup" class="btn-group float-sm-end">' +
      '<button type="button" class="btn btn-secondary dropdown-toggle" data-bs-toggle="dropdown"' +
      'aria-expanded="false">' +
      '<i class="fa-solid fa-user me-2"></i>' +
      '</button>' +
      '<ul class="dropdown-menu dropdown-menu-end">' +
      '<li><a class="dropdown-item"' +
      'href="/account_info" style="font-size: 15px; color: var(--primary-blue) !important;"><i ' +
      'class="fa-regular fa-circle-user" style="padding-right: 5px;"></i>Thông tin tài khoản</a></li>' +
      '<li><a class="dropdown-item"' +
      'href="/edit_info" style="font-size: 15px; color: var(--primary-blue) !important;"><i ' +
      'class="fa-solid fa-pen-to-square" style="padding-right: 5px;"></i>Chỉnh sửa thông ' +
      'tin</a></li>' +
      '<li><a class="dropdown-item" href="/change_password" style="font-size: 15px; color: var(--primary-blue) !important;"><i ' +
      'class="fa-solid fa-unlock" style="padding-right: 5px;"></i>Thay đổi mật khẩu</a>' +
      '</li>' +
      '<li><a class="dropdown-item" href="/assets/page/LichSuDatVe.html" style="font-size: 15px; color: var(--primary-blue) !important;"><i ' +
      'class="fa-solid fa-clock" style="padding-right: 5px;"></i>Lịch sử đặt vé</a></li>' +
      '<li><a class="dropdown-item" href="/" onclick="logout()" style="font-size: 15px; color: var(--primary-blue) !important;"><i class="fa-solid fa-right-from-bracket" style="padding-right: 5px;"></i>Đăng xuất</a></li>' +
      '</ul>' +
      '</div>'
    document.getElementById("navbarSupportedContent").innerHTML = document.getElementById("navbarSupportedContent").innerHTML + userBtn;
  }
  function logout() {
    localStorage.removeItem("accessToken");
    localStorage.removeItem("refreshToken");
    window.location.reload();
  }
</script>
